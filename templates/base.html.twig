<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://bootswatch.com/5/cosmo/bootstrap.min.css">
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path("home") }}">To Do List</a>
                    </li>
                    {% if not( is_granted('IS_AUTHENTICATED_FULLY')) %}
                        <li class="nav-item">
                            <a class="btn btn-info" href="{{ path("login") }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-info" href="{{ path("app_register") }}">Inscription</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("ajoutertache") }}">Ajouter</a>
                        </li>
                        <li class="nav-item">
                            <p class="nav-link">Nom d'utilisateur : {{ app.user.username }}</p>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-info" href="{{ path("app_dashboard") }}">Tableau de bord</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-info" href="{{ path("app_logout") }}">Déconnexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        {% block body %}
        {% endblock %}
    </div>
    </body>
</html>
